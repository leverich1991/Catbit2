<div class="container">

<center><h1>Steps</h1></center>
<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow= "<%= @daily_activity['summary']['steps'] %>" aria-valuemin="0" aria-valuemax= "<%= @daily_activity['goals']['steps'] %>" style="width: <%= ((@daily_activity['summary']['steps'].to_f / @daily_activity['goals']['steps'].to_f)*100).round(2) %>%; min-width: 3em;">
  <%= ((@daily_activity['summary']['steps'].to_f / @daily_activity['goals']['steps'].to_f)*100).round(2) %>%
  </div>
</div>
<br><br>
<center><h1>Distance</h1></center>

<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow= "<%= @daily_activity['summary']['distances'][0]['distance'] %>" aria-valuemin="0" aria-valuemax= "<%= @daily_activity['goals']['distance'] %>" style="width: <%= ((@daily_activity['summary']['distances'][0]['distance'].to_f / @daily_activity['goals']['distance'].to_f)*100).round(2) %>%; min-width: 3em">
  <%= ((@daily_activity['summary']['distances'][0]['distance'].to_f / @daily_activity['goals']['distance'].to_f)*100).round(2) %>%
  </div>
</div>
<br><br>


<center><h1>Calories</h1></center>

<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow= "<%= @daily_activity['summary']['caloriesOut'] %>" aria-valuemin="0" aria-valuemax= "<%= @daily_activity['goals']['caloriesOut'] %>" style="width: <%= ((@daily_activity['summary']['caloriesOut'].to_f / @daily_activity['goals']['caloriesOut'].to_f)*100).round(2) %>%; min-width: 3em">
  <%= ((@daily_activity['summary']['caloriesOut'].to_f / @daily_activity['goals']['caloriesOut'].to_f)*100).round(2) %>%
  </div>
</div>
<br><br>
<h1>You Earned:</h1>
<h2><%= @daily_activity['goals']['activeMinutes'] %> Points</h2>


